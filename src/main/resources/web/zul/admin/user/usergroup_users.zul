<!DOCTYPE xml>
<borderlayout>
	<west width="50%" border="0" style="padding:5px">
		<groupbox hflex="1" vflex="1">
			<caption label="${labels.label.usersavailable}"/>
			<listbox mold="paging" autopaging="true"
					 model="@load(vm.getListManagerList('users',0))"
					 droppable="true" onDrop="@command('dropToUserList',item=event.dragged.attributes.item,list=0)"
					 hflex="1" vflex="1"
					 class="available-items alpha-noborder alpha-nobg" 
					 oddRowSclass="non-odd">
				<template name="model" var="user">
					<listitem sclass="@init(user.internalName.toLowerCase().concat('-item'))"
							  attributes.item="@init(user)" 
							  draggable="true" droppable="true" 
	 						  onDrop="@command('insertToUserList',item=event.dragged.attributes.item,base=user,list=0)">
						<listcell label="@init(user.name)" 
								  iconSclass="z-icon-user alpha-icon-lg"/>
					</listitem>
				</template>
			</listbox>
		</groupbox>
	</west>
	<center border="0" style="padding:5px">
		<groupbox  vflex="1">
			<caption label="${labels.label.usersselected}"/>
			<listbox mold="paging" autopaging="true" 
					 model="@load(vm.getListManagerList('users',1))"
					 droppable="true" onDrop="@command('dropToUserList',item=event.dragged.attributes.item,list=1)"
					 class="selected-items alpha-noborder alpha-nobg"
					 hflex="1" vflex="1"
					 oddRowSclass="non-odd">
				<template name="model" var="user">
					<listitem sclass="@init(user.internalName.toLowerCase().concat('-item'))"
							  attributes.item="@init(user)" 
							  draggable="true" droppable="true" 
							  onDrop="@command('insertToUserList',item=event.dragged.attributes.item,base=user,list=1)">
						<listcell label="@init(user.name)" 
								  iconSclass="z-icon-user alpha-icon-lg"/>
					</listitem>
				</template>
			</listbox>
		</groupbox>
	</center>
	<south border="0">
		<div align="center">
			<label value="${labels.info.dragndropinfo}"/>
		</div>
	</south>
</borderlayout>