<!DOCTYPE xml>
<?page contentType="text/html;charset=UTF-8"?>
<window id="layoutDialogWin" width="350px" title="@init(vm.title)"
		viewModel="@id('vm') @init('org.seed.ui.zk.vm.admin.LayoutDialogViewModel')" 
		mode="modal" closable="true">
	<div class="alpha-dialog">
		<grid class="alpha-noborder">
            <columns>
                <column width="35%"/>
                <column/>
            </columns>
            <rows>
            	<row>
            		<cell align="right">
                		<label value="${labels.label.nested}:"/>
                	</cell>
                	<cell>
	                	<combobox model="@load(vm.availableNesteds) @template(empty each.name ? 'empty' : 'nested')"
	            				  mandatory="true"
	            			  	  selectedItem="@bind(vm.nestedEntity)"
	            			  	  value="@load(vm.nestedEntity.name)"
	            			  	  hflex="1">
		            		<template name="empty">
		                    	<comboitem/>
		                	</template>
		                	<template name="nested" var="nestedEntity">
		                    	<comboitem label="@init(nestedEntity.name)" 
		                    			   iconSclass="z-icon-table z-icon-fw alpha-icon-lg"/>
		                	</template>
	            		</combobox>
		            </cell>
                </row>
			</rows>
		</grid>
		<div class="alpha-dialog-footer">
			<button iconSclass="z-icon-check"
					label="${labels.button.add}" 
					onClick="@command('addSubForm',elem=self)"/>
			<space/>
			<button iconSclass="z-icon-close" 
					label="${labels.button.cancel}" 
					onClick="@command('cancel')"/>
		</div>
	</div>		
</window>