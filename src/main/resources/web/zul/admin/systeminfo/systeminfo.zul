<!DOCTYPE xml>
<?component name="info-system" macroURI="~./zul/admin/systeminfo/systeminfo_system.zul" inline="true"?>
<?component name="info-environment" macroURI="~./zul/admin/systeminfo/systeminfo_environment.zul" inline="true"?>
<?component name="info-hibernate" macroURI="~./zul/admin/systeminfo/systeminfo_hibernate.zul" inline="true"?>
<?component name="info-jobs" macroURI="~./zul/admin/systeminfo/systeminfo_jobs.zul" inline="true"?>
<?component name="info-zk" macroURI="~./zul/admin/systeminfo/systeminfo_zk.zul" inline="true"?>
<borderlayout viewModel="@id('vm') @init('org.seed.ui.zk.vm.admin.SystemInfoViewModel')">
	<north border="0">
		<toolbar>
			<toolbarbutton iconSclass="z-icon-refresh alpha-icon-lg" 
						   label="${labels.button.refresh}" 
						   onClick="@command('refresh',elem=self)"/>
		</toolbar>
	</north>
	<center border="0">
		<grid hflex="1" class="alpha-noborder">
			<columns>
            	<column/>
              	<column/>
            </columns>
            <rows>
            	<row>
            		<cell valign="top">
            			<vlayout>
            				<info-system/>
            				<info-environment/>
            				<info-jobs/>
            			</vlayout>
            		</cell>
            		<cell valign="top">
            			<vlayout>
		            		<info-hibernate/>
		            		<info-zk/>
	            		</vlayout>
            		</cell>
            	</row>
            </rows>
        </grid>
	</center>
</borderlayout>