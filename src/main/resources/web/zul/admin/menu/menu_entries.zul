<!DOCTYPE xml>
<borderlayout>
	<north border="0">
		<toolbar width="100%">
			<toolbarbutton label="${labels.admin.menu.newentry}" 
						   iconSclass="z-icon-file-o alpha-icon-lg" 
					   	   onClick="@command('newEntry')"/>
			<toolbarbutton label="${labels.admin.menu.removeentry}" 
						   iconSclass="z-icon-remove alpha-icon-lg" 
					   	   onClick="@command('removeEntry',elem=self)"
					   	   visible="@load(not empty vm.subMenu)"/>
		</toolbar>
	</north>
	<center border="0">
		<listbox mold="paging" autopaging="true" 
				 model="@load(vm.object.subMenus)" 
		         selectedItem="@bind(vm.subMenu)"
		         visible="@load(!empty vm.object.subMenus)"
		         class="alpha-noborder"
		         hflex="1" vflex="1">
			<listhead sizable="true">
	            <listheader label="${labels.label.entry}" hflex="1"
	            			sort="auto(name)"/>
	        </listhead> 
	        <template name="model" var="submenu">
	            <listitem attributes.item="@load(submenu)" 
	            		  draggable="true" droppable="true" 
	            		  onDrop="@command('swapEntries',item=event.dragged.attributes.item,base=submenu)">
	            	<listcell iconSclass="z-icon-navicon alpha-icon-lg">
	            		<label value="@load(submenu.name)" 
	            			   style="margin-left:3px"/>
	            	</listcell>
	            </listitem>
		    </template> 
		</listbox>
	</center>
</borderlayout>